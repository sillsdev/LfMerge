{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "${workspaceFolder}/src/LfMergeQueueManager/LfMergeQueueManager.csproj",
                "-o",
                "${workspaceFolder}/tarball/lfmerge-7000072/usr/lib/lfmerge/7000072/",
                // Ask dotnet build to generate full paths for file names.
                "/property:GenerateFullPaths=true",
                // Do not generate summary otherwise it leads to duplicate errors in Problems panel
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": ".NET Core Test with debugger",
            "type": "process",
            "isBackground": true,
            "command": "dotnet",
            "args": [ "test" ],
            "options":
                {
                    "cwd": "${workspaceFolder}",
                    "env":
                    {
                        "VSTEST_HOST_DEBUG": "1"
                    },
                },
            "group": "test", "presentation":
                {
                    "echo": true,
                    "reveal": "always",
                    "focus": false,
                    "panel": "shared"
                },
            "problemMatcher": []
        },
    ]
}